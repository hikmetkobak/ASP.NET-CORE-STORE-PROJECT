@model IEnumerable<IdentityUser>

<div class="text-center">
    <h6 class="display-6">Users</h6>
</div>

<div class="d-flex justify-content-end my-1">
    <div class="btn-group">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-add"></i>
            Add User
        </a>
    </div>
</div>


<table class="">
    <thead class="text-center">
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Roles</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityUser user in Model)
        {
            <tr class="text-center">
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td user-name="@user.UserName" user-role="">-</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@user.UserName">Edit</a>
                        <a class="btn btn-info" asp-action="ResetPassword" asp-route-id="@user.UserName">Reset Password</a>
                        <form method="post" asp-action="DeleteOneUser">
                            <input type="hidden" name="UserName" value="@user.UserName" />
                            <button type="submit" class="btn btn-danger rounded-0">
                                <i class="fa fa-solid fa-trash"></i>
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>